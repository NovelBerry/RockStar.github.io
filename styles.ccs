body {
    font-family: sans-serif;
    background-color: #f0f0f0;
    text-align: center;
    padding-top: 50px;
}

h1 {
    color: #333;
}

.score {
    display: flex;
    justify-content: center;
    gap: 30px;
    margin-bottom: 20px;
}

.choices button {
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
    margin: 5px;
}

#result {
    font-size: 20px;
    margin-top: 20px;
    color: #555;
}
